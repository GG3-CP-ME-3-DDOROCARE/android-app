<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BrandAudit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="endIconTint">@color/dark_blue</item>
        <item name="startIconTint">@color/dark_blue</item>
        <item name="android:colorPrimaryDark">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="background">@color/orange</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/dark_blue</item>
        <item name="android:textColorHint">@color/dark_blue</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/dark_blue</item>
        <item name="colorSecondaryContainer">@color/dark_blue</item>
    </style>

</resources>